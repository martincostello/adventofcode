{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Advent of Code",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/AdventOfCode.Site/bin/Debug/net7.0/AdventOfCode.Site.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/AdventOfCode.Site",
      "stopAtEntry": false,
      "internalConsoleOptions": "openOnSessionStart",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Run .NET tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "dotnet",
      "args": [
        "test"
      ],
      "cwd": "${workspaceFolder}/tests/AdventOfCode.Tests",
      "console": "internalConsole",
      "stopAtEntry": false,
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Run TypeScript tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "test"
      ],
      "cwd": "${workspaceFolder}/src/AdventOfCode.Site",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
