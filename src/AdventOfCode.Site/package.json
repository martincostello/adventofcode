{
  "name": "adventofcode",
  "private": true,
  "type": "module",
  "version": "9.0.0",
  "description": "Solutions for Advent of Code in C# and TypeScript",
  "scripts": {
    "build": "webpack",
    "format": "prettier --write scripts/**/*.ts",
    "format-check": "prettier --check scripts/**/*.ts",
    "lint": "eslint scripts",
    "lint:fix": "eslint scripts --fix",
    "test": "jest",
    "watch": "webpack --watch",
    "publish": "npm run build && npm run format && npm run lint",
    "all": "npm run publish && npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/martincostello/adventofcode.git"
  },
  "author": "martincostello",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.25.8",
    "@babel/preset-env": "^7.25.8",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/jquery": "^3.5.31",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.11.0",
    "jest": "^29.7.0",
    "linq-to-typescript": "^10.0.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-md5": "^1.3.1",
    "tsify": "5.0.4",
    "typescript": "5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "scripts/**/*.ts"
    ],
    "reporters": [
      "default",
      "github-actions"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "printWidth": 140,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": false
  }
}
